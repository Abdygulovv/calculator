<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >


    <TextView
        android:id="@+id/tv_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policies"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_policy"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_policies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="textStart"
        android:text="Policy"
        app:iconTint="@color/black"
        app:icon="@drawable/ic_right"
        app:iconGravity="end"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue"
        app:cornerRadius="12dp"
        android:textSize="12sp"
        android:layout_marginTop="12sp"
        android:paddingStart="16dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_product"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_policy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Product Category "
        android:textAlignment="textStart"
        app:backgroundTint="@color/white"
        app:iconTint="@color/black"
        app:icon="@drawable/ic_right"
        app:iconGravity="end"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue"
        app:cornerRadius="12dp"
        android:textSize="12sp"
        android:layout_marginTop="12sp"
        android:paddingStart="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_origin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Origin Country"
        app:icon="@drawable/ic_right"
        app:iconTint="@color/black"
        app:iconGravity="end"
        android:textAlignment="textStart"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:layout_marginTop="12sp"
        android:paddingStart="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_brand"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_origin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Brand"
        app:iconTint="@color/black"
        app:icon="@drawable/ic_right"
        app:iconGravity="end"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue"
        android:layout_marginTop="12sp"
        app:cornerRadius="12dp"
        android:paddingStart="16dp"/>

    <TextView
        android:id="@+id/tv_cur_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Policies"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/btn_brand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="78dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_CSV"
        android:layout_width="320dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cur_policies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Export as CSV"
        app:cornerRadius="12dp"
        android:textSize="8sp"
        android:backgroundTint="@color/red"
        android:layout_marginTop="16sp"
        android:paddingStart="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>